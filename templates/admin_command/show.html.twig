{% extends 'base-admin.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1 class="text-title text-terracotta">Commande <a href="{{ path('app_admin_command_edit', {'id': command.id}) }}"><i class="fa-solid fa-pen text-pink"></i></a></h1></h1>

    <table class="table">
        <tbody>
            <tr>
                <th class="text-terracotta">Id</th>
                <td>{{ command.id }}</td>
            </tr>
            <tr>
                <th class="text-terracotta">Prix total</th>
                <td>{{ command.totalPrice }}</td>
            </tr>
            <tr>
                <th class="text-terracotta">#</th>
                <td>{{ command.numCommand }}</td>
            </tr>
            <tr>
                <th class="text-terracotta">Date de création</th>
                <td>{{ command.createdAt ? command.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="text-terracotta">Statut</th>
                <td>{{ command.status }}</td>
            </tr>
        </tbody>
    </table>

        <a class="text-decoration-none btn btn-terracotta" href="{{ path('app_admin_command_index') }}"><i class="fa-solid fa-arrow-left-long text-white"></i> Retour à la liste</a>

    {{ include('admin_command/_delete_form.html.twig') }}
{% endblock %}
