{% extends 'base-admin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1 class="text-title text-terracotta">Utilisateur <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}"><i class="fa-solid fa-pen text-pink"></i></a></h1>

    <table class="table">
        <tbody>
            <tr>
                <th class="text-terracotta">Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th class="text-terracotta">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th class="text-terracotta">Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th class="text-terracotta">Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th class="text-terracotta">Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th class="text-terracotta">Date de création</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="text-decoration-none btn btn-terracotta" href="{{ path('app_admin_user_index') }}"><i class="fa-solid fa-arrow-left-long text-white"></i> Retour à la liste</a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
