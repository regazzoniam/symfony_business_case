{% extends 'base-front.html.twig' %}

{% block title %}Compte{% endblock %}

{% block body %}
    {# pour logout #}
    {% if app.user %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-6">
                <h1 class="text-title text-pink">Hello {{ app.user.firstname }}</h1>
            </div>
            <div class="col-6">
                <a class="btn btn-pink text-decoration-none" href="{{ path('app_logout') }}">
                    Se déconnecter</i>
                </a>
            </div>
        </div>
    </div>

    {% else %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <div class="container mt-4">
            <h1 class="h3 mb-3 font-weight-normal text-title text-terracotta">Pas de compte ?</h1>
            <a class="btn btn-pink" href="{{path('app_register')}}">
                Créer un compte
            </a>

            <hr class="text-lightgrey">

            <h1 class="h3 mb-3 font-weight-normal text-title text-terracotta">Connectez-vous</h1>
            <div class="labels my-3">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
            </div>
            <button class="btn btn-terracotta text-white" type="submit">
                Se connecter
            </button> 
            <a class="btn btn-pink" href="{{path('app_password_forgotten')}}">
            Mot de pass oublié
            </a>
                
        </div>
    </form>
    {% endif %}

{% endblock %}